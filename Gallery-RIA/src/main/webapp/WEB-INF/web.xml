<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Gallery-RIA</display-name>
  <context-param>
    <param-name>dbUrl</param-name>
    <param-value>jdbc:mysql://localhost:3306/gallery?serverTimezone=UTC</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value>trippa</param-value>
  </context-param>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.cj.jdbc.Driver</param-value>
  </context-param>
  <filter>
    <filter-name>CheckLogin</filter-name>
    <filter-class>filters.CheckLogin</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckLogin</filter-name>
    <url-pattern>/ViewHome</url-pattern>
    <url-pattern>/CreateAlbum</url-pattern>
    <url-pattern>/DeleteImage</url-pattern>
    <url-pattern>/Logout</url-pattern>
    <url-pattern>/ViewAlbum</url-pattern>
    <url-pattern>/ViewCreateAlbum</url-pattern>
    <url-pattern>/ViewHome</url-pattern>
    <url-pattern>/ViewImage</url-pattern>
    <url-pattern>/WriteComment</url-pattern>
  </filter-mapping>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
</web-app>